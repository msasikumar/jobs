# Staging Environment Configuration
ENVIRONMENT=staging
NODE_ENV=staging

# Server Configuration
TARGET_SERVER=192.168.68.89
SSH_USER=deploy
CONTAINER_NAME=jobs-app-staging
HOST_PORT=8080
CONTAINER_PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobs_staging
DB_USER=jobs_user
DB_PASSWORD=staging_password
DB_SSL=false
DB_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password
REDIS_DB=1

# Application Configuration
APP_NAME=Jobs Application (Staging)
APP_VERSION=1.0.0-staging
APP_URL=http://192.168.68.89:8080
API_BASE_URL=http://192.168.68.89:8080/api

# Security Configuration
JWT_SECRET=staging_jwt_secret_key_here
SESSION_SECRET=staging_session_secret_here
ENCRYPTION_KEY=staging_32_character_encryption

# Email Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=staging_user
SMTP_PASSWORD=staging_password
SMTP_FROM=staging@company.com

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=5

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9091
HEALTH_CHECK_INTERVAL=60
PERFORMANCE_MONITORING=true

# File Upload Configuration
UPLOAD_MAX_SIZE=5MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/app/data/uploads

# Cache Configuration
CACHE_TTL=1800
CACHE_MAX_SIZE=500

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=200

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 4 * * *
BACKUP_RETENTION_DAYS=7

# Container Resource Limits
MEMORY_LIMIT=1g
CPU_LIMIT=1.0

# Development/Testing Features
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=true
TEST_DATA_ENABLED=true