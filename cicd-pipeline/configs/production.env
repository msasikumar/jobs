# Production Environment Configuration
ENVIRONMENT=production
NODE_ENV=production

# Server Configuration
TARGET_SERVER=192.168.68.89
SSH_USER=deploy
CONTAINER_NAME=jobs-app-production
HOST_PORT=80
CONTAINER_PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobs_production
DB_USER=jobs_user
DB_PASSWORD=secure_production_password
DB_SSL=true
DB_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password
REDIS_DB=0

# Application Configuration
APP_NAME=Jobs Application
APP_VERSION=1.0.0
APP_URL=http://192.168.68.89
API_BASE_URL=http://192.168.68.89/api

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
SESSION_SECRET=your_super_secure_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Email Configuration
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=noreply@company.com
SMTP_PASSWORD=smtp_password
SMTP_FROM=noreply@company.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/app/data/uploads

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Container Resource Limits
MEMORY_LIMIT=2g
CPU_LIMIT=1.5