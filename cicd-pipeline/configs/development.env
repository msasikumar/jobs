# Development Environment Configuration
ENVIRONMENT=development
NODE_ENV=development

# Server Configuration
TARGET_SERVER=192.168.68.89
SSH_USER=deploy
CONTAINER_NAME=jobs-app-development
HOST_PORT=3000
CONTAINER_PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobs_development
DB_USER=jobs_user
DB_PASSWORD=dev_password
DB_SSL=false
DB_POOL_SIZE=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password
REDIS_DB=2

# Application Configuration
APP_NAME=Jobs Application (Development)
APP_VERSION=1.0.0-dev
APP_URL=http://192.168.68.89:3000
API_BASE_URL=http://192.168.68.89:3000/api

# Security Configuration
JWT_SECRET=dev_jwt_secret_key_here
SESSION_SECRET=dev_session_secret_here
ENCRYPTION_KEY=dev_32_character_encryption_key

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev_user
SMTP_PASSWORD=dev_password
SMTP_FROM=dev@company.com

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=3

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9092
HEALTH_CHECK_INTERVAL=120
PERFORMANCE_MONITORING=false

# File Upload Configuration
UPLOAD_MAX_SIZE=2MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,txt
UPLOAD_PATH=/app/data/uploads

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 6 * * *
BACKUP_RETENTION_DAYS=3

# Container Resource Limits
MEMORY_LIMIT=512m
CPU_LIMIT=0.5

# Development Features
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_EXTERNAL_APIS=true
TEST_DATA_ENABLED=true
CORS_ENABLED=true
DETAILED_ERRORS=true
AUTO_MIGRATIONS=true
SEED_DATA=true